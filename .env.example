# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ics_threat_detection
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/ics_threat_detection

# Flower Server Configuration
FLOWER_SERVER_ADDRESS=flower-server:8080
FL_NUM_ROUNDS=5
FL_MIN_CLIENTS=3

# FastAPI Backend Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:4173","http://localhost:3000"]

# Dashboard Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Service-specific overrides (optional)
# SIM_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# ANOMALY_IFOREST_KAFKA_GROUP_ID=iforest-consumer-group

# Redis (Context Buffer for Backend)
REDIS_URL=redis://redis:6379/0

# Neo4j (MITRE ATT&CK Graph)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# Backend Settings
DEMO_MODE=true
SEED_DATA_ON_STARTUP=false

# Logging
LOG_LEVEL=INFO

# Security (CHANGE IN PRODUCTION)
SECRET_KEY=change-me-in-production
JWT_SECRET=change-me-in-production
